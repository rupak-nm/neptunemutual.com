---
import BaseLayout from "../../layouts/BaseLayout.astro";
import EthereumUnitConverter from "../../views/EthereumUnitConverter.astro";
import Seo from "../../components/Seo.astro";

import styles from "./ethereum-unit-converter.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Online Ethereum Unit Converter"
    description="Change the unit of measurement for ETH denominations, such as Wei, KWei, MWei, GWei, Szabo, Finney, Ether, and others."
    og={{
      image: "/assets/images/meta/og/web3-ethereum-unit-converter.png",
      imageAlt: "Ethereum Unit Converter",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <EthereumUnitConverter />

  <Fragment slot="footer">
    <script src="../../scripts/web3-tools/ethereum-unit-converter/index.js"
    ></script>
  </Fragment>
</BaseLayout>
