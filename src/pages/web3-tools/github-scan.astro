---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Seo from "../../components/Seo.astro";

import GithubScan from "../../views/GithubScan.astro";

import styles from "./github-scan.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Online Ethereum Unit Converter"
    description="Change the unit of measurement for ETH denominations, such as Wei, KWei, MWei, GWei, Szabo, Finney, Ether, and others."
    og={{
      image: "/assets/images/meta/og/web3-github-scan.png",
      imageAlt: "Ethereum Unit Converter",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <GithubScan />

  <Fragment slot="footer">
    <script src="../../scripts/web3-tools/github-scan/index.js"></script>
  </Fragment>
</BaseLayout>
