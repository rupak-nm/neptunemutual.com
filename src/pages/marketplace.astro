---
import BaseLayout from "../layouts/BaseLayout.astro";
import Marketplace from "../views/Marketplace.astro";
import Seo from "../components/Seo.astro";

import styles from "./marketplace.scss?inline";
---

<BaseLayout headerStyle={"colored"}>
  <Seo
    slot="seo"
    title="Neptune Mutual Marketplace / Neptune Mutual"
    description="Neptune Mutual Marketplace App for Ethereum and Arbitrum"
    og={{
      image: "/assets/images/meta/og/marketplace.png",
      imageAlt: "Neptune Mutual Marketplace",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>

  <Marketplace />

  <Fragment slot="footer">
    <script src="../scripts/marketplace/index.js"></script>
  </Fragment>
</BaseLayout>
