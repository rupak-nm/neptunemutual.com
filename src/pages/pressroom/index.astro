---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Pressroom from "../../views/Pressroom.astro";
import Seo from "../../components/Seo.astro";

import * as api from "../../../service/api";
import styles from "./index.scss?inline";

const POSTS_PER_PAGE = 4;
const paginated = await api.getPaginated<Article>("pressroom", POSTS_PER_PAGE);
const { totalPages, pages } = paginated;

const currentPage = 1;
const data = pages[currentPage];

const newsPosts = await api.getEnumerable<NewsItem>("news", 1000, 0);
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Neptune Mutual Press Room / Neptune Mutual"
    description="Together, letâ€™s build a safer Ethereum DeFi ecosystem for everyone by decentralizing and democratizing crypto-native insurance."
    og={{
      image: "/assets/images/meta/og/pressroom.png",
      imageAlt: "Neptune Mutual Press Room",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>

  <Pressroom
    currentPage={1}
    totalPages={totalPages}
    data={data}
    newsPosts={newsPosts}
  />

  <Fragment slot="footer">
    <script src="../../scripts/pressroom/index.js"></script>
  </Fragment>
</BaseLayout>
