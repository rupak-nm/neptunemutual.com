---
import {
  extendedFields,
  simpleFields,
  crumbs,
} from "../data/ethereum-unit-converter-fields";

import Breadcrumb from "../elements/Breadcrumb.astro";

const t = (x: string): string => x;
---

<div class="ethereum unit converter">
  <div class="left container">
    <div class="desktop header">
      <Breadcrumb items={crumbs} />
      <h2>{t("Convert Ethereum Denominations")}</h2>
    </div>
    <form class={`form extended`}>
      <div class="inputs extended">
        {
          extendedFields.map((field, i) => {
            return (
              <div>
                <label for={`extended-${i}`}>{field.name}</label>
                <div class="input container">
                  <input
                    id={`extended-${i}`}
                    type="number"
                    min="0"
                    data-type={field.type}
                    data-option="extended"
                    value={field?.value}
                    placeholder={field.placeHolder}
                  />
                </div>
              </div>
            );
          })
        }
      </div>
      <div class="inputs simple">
        {
          simpleFields.map((field, i) => {
            return (
              <div>
                <label for={`simple-${i}`}>{field.name}</label>
                <div class="input container">
                  <input
                    id={`simple-${i}`}
                    type="number"
                    min="0"
                    data-type={field.type}
                    data-option="simple"
                    value={field?.value}
                    placeholder={field.placeHolder}
                  />
                </div>
              </div>
            );
          })
        }
      </div>
    </form>
  </div>
  <div class="right container">
    <div class="option container">
      <legend>Options</legend>
      <div class="options">
        <div class="option">
          <input
            type="radio"
            name="option_type"
            id="simple-radio"
            value="simple"
          />
          <label for="simple-radio">Simple Converter</label>
        </div>
        <div class="option">
          <input
            type="radio"
            name="option_type"
            id="extended-radio"
            value="extended"
            checked
          />
          <label for="extended-radio">Extended Converter</label>
        </div>
      </div>
    </div>
  </div>
  <div class="mobile header">
    <Breadcrumb items={crumbs} />
    <h2>{t("Convert Ethereum Denominations")}</h2>
  </div>
</div>
