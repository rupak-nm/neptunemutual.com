---
import { networks } from "./networks";

const t = (x: string): string => x;
---

<div class="marketplace options container">
  <div class="inner container">
    {
      networks.map(({ name, src, srcDark, link, text }) => (
        <a class="network item" href={link} target="_blank">
          <i data-mode="light">
            <Fragment set:html={src || name} />
          </i>
          <i data-mode="dark">
            <Fragment set:html={srcDark || name} />
          </i>
          <div class="text container">
            <p class="name">{name}</p>
            <p class="text">{text}</p>
          </div>
        </a>
      ))
    }
  </div>
</div>
