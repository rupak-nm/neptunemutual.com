---
import Icon from "../../elements/Icon.astro";
import Member from "./team/Member.astro";
import Slider from "../../components/Slider.astro";

import { team } from "./team";

const t = (x: string): string => x;
---

<div class="team full width container">
  <div class="content">
    <h2 class="meet our team">
      <a href="/careers/">
        <span>
          {t("Weâ€™re hiring!")}
        </span>
        <Icon variant="link-external-01" size={"sm"} />
      </a>

      <div id="meet-our-team">
        {t("Meet Our Team")}
      </div>
    </h2>

    <p class="subheading">
      {
        t(
          "We are a global and dynamic team with a mission to create a reliable, fast, and effective platform that protects digital assets."
        )
      }
    </p>
  </div>
  <div class="team members center">
    <div class="team member list container">
      <div class="ui team member list">
        {
          team.map((member) => {
            return <Member className="with slider" member={member} />;
          })
        }
      </div>
    </div>
  </div>
</div>
