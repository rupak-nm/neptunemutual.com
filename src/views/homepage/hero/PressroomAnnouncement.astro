---
import Icon from "../../../elements/Icon.astro";

import * as api from "../../../../service/api";
import { Api } from "../../../../types/enum";

const [{ title, slug }] = await api.getEnumerable<Article>(Api.Pressroom, 1, 0);

const t = (x: string): string => x;
---

<div class="pressroom announcement">
  <a class="styled link highlighted" href={`/pressroom/${slug}/`}>
    <span class="category">{t("Press Room")}</span>
    <div class="text">
      <span>{t(title)}</span>

      <Icon variant="arrow-right" />
    </div>
  </a>
</div>
